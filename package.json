{
  "name": "hull-facebook-audiences",
  "description": "Sync Hull Segments with Facebook Custom Audiences",
  "version": "0.0.1",
  "homepage": "https://github.com/hull-ships/hull-facebook-audiences",
  "license": "MIT",
  "author": {
    "name": "Hull",
    "email": "contact@hull.io",
    "url": "https://github.com/hull"
  },
  "engines": {
    "node": "6.x",
    "npm": "3.x"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hull-ships/hull-facebook-audiences"
  },
  "bugs": {
    "url": "https://github.com/hull-ships/hull-facebook-audiences/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run build:server",
    "build:server": "./node_modules/.bin/babel server -d lib",
    "clean": "./node_modules/.bin/rimraf dist; ./node_modules/.bin/rimraf lib",
    "start": "node ./lib",
    "start:dev": "NODE_ENV=development ./node_modules/.bin/nodemon -d 2 -V -w server -x ./node_modules/.bin/babel-node -- server",
    "test": "npm run test:lint && npm run test:units",
    "test:lint": "./node_modules/.bin/eslint ./server/index.js",
    "test:modules": "npm outdated --depth=0",
    "test:units": "NODE_ENV=test ./node_modules/.bin/mocha -R spec ./tests/index",
    "watch": "./node_modules/.bin/watch 'clear && npm run test:lint -s && npm run test:units -s' server src",
    "postinstall": "npm run build"
  },
  "keywords": [
    "hull",
    "ship",
    "hull-ship",
    "facebook"
  ],
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "bluebird": "^3.3.4",
    "ejs": "^2.4.1",
    "express": "^4.14.0",
    "fbgraph": "^1.2.0",
    "hull": "0.7.4",
    "librato-node": "^4.1.0",
    "rimraf": "^2.4.3",
    "urijs": "^1.17.1"
  },
  "devDependencies": {
    "mocha": "^2.5.3",
    "babel-eslint": "^6.1.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.9.2",
    "estraverse-fb": "^1.3.1",
    "nodemon": "^1.9.2"
  }
}
